<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="@dimen/fragment_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".fragment.EditPhraseFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/edit_phrase_fragment_phrase_textview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:text="@string/select_a_word_to_change"
            android:textAppearance="@style/TextAppearance.AppCompat.Headline"
            android:gravity="center"/>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/edit_phrase_fragment_phrase_recyclerview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/edit_phrase_fragment_phrase_textview"
            android:layout_above="@+id/edit_phrase_fragment_submit_button"
            android:layout_margin="16dp"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/edit_phrase_fragment_submit_button"
            android:text="@string/finished"
            android:layout_alignParentBottom="true"/>

    </RelativeLayout>
</FrameLayout>
